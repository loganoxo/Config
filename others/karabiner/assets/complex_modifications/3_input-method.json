{
    "title": "3. 输入法切换,需要在系统设置中把切换输入法的快捷键设置为f18",
    "rules": [
        {
            "description": "3.1 短按左 Command (⌘) 切换到英文输入法,需要在系统设置中把切换输入法的快捷键设置为f18",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [{ "key_code": "left_command", "lazy": true }],
                    "to_if_alone": [{ "key_code": "f18" }],
                    "to_if_held_down": [{ "key_code": "left_command" }],
                    "conditions": [
                        {
                            "input_sources": [{ "language": "zh-Hans" }],
                            "type": "input_source_if"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 300,
                        "basic.to_if_held_down_threshold_milliseconds": 300
                    }
                }
            ]
        },
        {
            "description": "3.2 短按右 Command (⌘) 切换到中文输入法,需要在系统设置中把切换输入法的快捷键设置为f18",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command"
                    },
                    "to": [{ "key_code": "right_command", "lazy": true }],
                    "to_if_alone": [{ "key_code": "f18" }],
                    "to_if_held_down": [{ "key_code": "right_command" }],
                    "conditions": [
                        {
                            "input_sources": [{ "language": "en" }],
                            "type": "input_source_if"
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 300,
                        "basic.to_if_held_down_threshold_milliseconds": 300
                    }
                }
            ]
        }
    ]
}
