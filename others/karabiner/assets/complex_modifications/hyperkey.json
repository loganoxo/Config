{
    "title": "2. HyperKey 的绑定",
    "rules": [
        {
            "description": "2.1 长按 CapsLock 变 HyperKey,不修改'修饰键+CapsLock' 和 '短按CapsLock' 的绑定",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": [
                                "left_command",
                                "left_control",
                                "left_option"
                            ],
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "hold_down_milliseconds": 200,
                            "key_code": "caps_lock"
                        },
                        {
                            "key_code": "vk_none"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_control",
                            "modifiers": [
                                "left_command",
                                "left_option",
                                "left_shift"
                            ]
                        }
                    ],
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 300,
                        "basic.to_if_held_down_threshold_milliseconds": 300
                    },
                    "type": "basic"
                }
            ]
        },
        {
            "description": "2.2 Shift+CapsLock 切换半角/全角标点",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "mandatory": ["shift"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "h",
                            "modifiers": ["left_option", "left_shift"]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
