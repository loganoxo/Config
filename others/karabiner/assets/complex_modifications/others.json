{
    "title": "4. 其他功能性绑定",
    "rules": [
        {
            "description": "同时按下 a、s、d 三个按键 打开 Mission Control",
            "manipulators": [
                {
                    "from": {
                        "modifiers": { "optional": ["any"] },
                        "simultaneous": [
                            { "key_code": "a" },
                            { "key_code": "s" },
                            { "key_code": "d" }
                        ]
                    },
                    "to": [
                        { "apple_vendor_keyboard_key_code": "mission_control" }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
