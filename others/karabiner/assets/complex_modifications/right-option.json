{
    "title": "3. 右边option的键绑定",
    "rules": [
        {
            "description": "RightOption+UpArrow 设为 PageUp",
            "manipulators": [
                {
                    "from": {
                        "key_code": "up_arrow",
                        "modifiers": {
                            "mandatory": ["right_option"]
                        }
                    },
                    "to": [{ "key_code": "page_up" }],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "RightOption+DownArrow 设为 PageDown",
            "manipulators": [
                {
                    "from": {
                        "key_code": "down_arrow",
                        "modifiers": {
                            "mandatory": ["right_option"]
                        }
                    },
                    "to": [{ "key_code": "page_down" }],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "RightOption+RightArrow 打开 Mission Control",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "mandatory": ["right_option"]
                        }
                    },
                    "to": [
                        { "apple_vendor_keyboard_key_code": "mission_control" }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "RightOption+LeftArrow 显示桌面 (需要在系统设置把该快捷键设为f19)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "mandatory": ["right_option"]
                        }
                    },
                    "to": [{ "key_code": "f19" }],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "RightOption+退格键 设为 del 键",
            "manipulators": [
                {
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": ["right_option"]
                        }
                    },
                    "to": [{ "key_code": "delete_forward" }],
                    "type": "basic"
                }
            ]
        }
    ]
}
