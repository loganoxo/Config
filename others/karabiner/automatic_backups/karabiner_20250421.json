{
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "长按 CapsLock 变 HyperKey,不修改'修饰键+CapsLock' 和 '短按CapsLock' 的绑定",
                        "manipulators": [
                            {
                                "from": { "key_code": "caps_lock" },
                                "parameters": {
                                    "basic.to_if_alone_timeout_milliseconds": 300,
                                    "basic.to_if_held_down_threshold_milliseconds": 300
                                },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "lazy": true,
                                        "modifiers": ["left_command", "left_control", "left_option"]
                                    }
                                ],
                                "to_if_alone": [
                                    {
                                        "hold_down_milliseconds": 200,
                                        "key_code": "caps_lock"
                                    },
                                    { "key_code": "vk_none" }
                                ],
                                "to_if_held_down": [
                                    {
                                        "key_code": "left_control",
                                        "modifiers": ["left_command", "left_option", "left_shift"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Shift+CapsLock 切换半角/全角标点",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "mandatory": ["shift"] }
                                },
                                "to": [
                                    {
                                        "key_code": "h",
                                        "modifiers": ["left_option", "left_shift"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "短按左 Command (⌘) 切换到英文输入法",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "input_sources": [{ "language": "zh-Hans" }],
