{
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "1.1 长按 CapsLock 变 HyperKey,不修改'修饰键+CapsLock' 和 '短按CapsLock' 的绑定",
                        "manipulators": [
                            {
                                "from": { "key_code": "caps_lock" },
                                "parameters": {
                                    "basic.to_if_alone_timeout_milliseconds": 300,
                                    "basic.to_if_held_down_threshold_milliseconds": 300
                                },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "lazy": true,
                                        "modifiers": ["left_command", "left_control", "left_option"]
                                    }
                                ],
                                "to_if_alone": [
                                    {
                                        "hold_down_milliseconds": 200,
                                        "key_code": "caps_lock"
                                    },
                                    { "key_code": "vk_none" }
                                ],
                                "to_if_held_down": [
                                    {
                                        "key_code": "left_control",
                                        "modifiers": ["left_command", "left_option", "left_shift"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "1.2 Command+CapsLock 执行shell触发hammerspoon中切换标点",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "mandatory": ["command"] }
                                },
                                "to": [{ "shell_command": "/opt/homebrew/bin/hs -c 'Switch_Punct()'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "2.1 屏蔽command+control+shift+option+w,改为vk_none",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "w",
                                    "modifiers": { "mandatory": ["command", "control", "option", "shift"] }
                                },
                                "to": { "key_code": "vk_none" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "2.2 屏蔽command+control+shift+option+/,改为vk_none",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "slash",
                                    "modifiers": { "mandatory": ["command", "control", "option", "shift"] }
                                },
                                "to": { "key_code": "vk_none" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "2.3 屏蔽command+control+shift+option+退格键,改为vk_none",
                        "enabled": false,
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "delete_or_backspace",
                                    "modifiers": { "mandatory": ["command", "control", "option", "shift"] }
                                },
                                "to": { "key_code": "vk_none" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "2.4 屏蔽command+control+shift+option+点,改为vk_none",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "period",
                                    "modifiers": { "mandatory": ["command", "control", "option", "shift"] }
                                },
                                "to": { "key_code": "vk_none" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "2.5 屏蔽command+control+shift+option+逗号,改为vk_none",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "comma",
                                    "modifiers": { "mandatory": ["command", "control", "option", "shift"] }
                                },
                                "to": { "key_code": "vk_none" },
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "3.1 短按左 Command 切换到英文输入法,要在系统设置把切换输入法快捷键设为f18",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "input_sources": [{ "language": "zh-Hans" }],
                                        "type": "input_source_if"
                                    }
                                ],
                                "from": { "key_code": "left_command" },
                                "parameters": {
                                    "basic.to_if_alone_timeout_milliseconds": 300,
                                    "basic.to_if_held_down_threshold_milliseconds": 300
                                },
                                "to": [
                                    {
                                        "key_code": "left_command",
                                        "lazy": true
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "f18" }],
                                "to_if_held_down": [{ "key_code": "left_command" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "3.2 短按右 Command 切换到中文输入法,要在系统设置把切换输入法快捷键设为f18",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "input_sources": [{ "language": "en" }],
                                        "type": "input_source_if"
                                    }
                                ],
