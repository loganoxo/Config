                                },
                                "to": [
                                    {
                                        "key_code": "right_command",
                                        "lazy": true
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "f18" }],
                                "to_if_held_down": [{ "key_code": "right_command" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "4.1 right_command+UpArrow 设为 PageUp",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "up_arrow",
                                    "modifiers": { "mandatory": ["right_command"] }
                                },
                                "to": [{ "key_code": "page_up" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "4.2 right_command+DownArrow 设为 PageDown",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "down_arrow",
                                    "modifiers": { "mandatory": ["right_command"] }
                                },
                                "to": [{ "key_code": "page_down" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "4.3 right_command+RightArrow 打开 Mission Control",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "right_arrow",
                                    "modifiers": { "mandatory": ["right_command"] }
                                },
                                "to": [{ "apple_vendor_keyboard_key_code": "mission_control" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "4.4 right_command+LeftArrow 显示桌面 (需要在系统设置把该快捷键设为f17)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "left_arrow",
                                    "modifiers": { "mandatory": ["right_command"] }
                                },
                                "to": [{ "key_code": "f17" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "4.5 right_command+退格键 设为 del 键",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "delete_or_backspace",
                                    "modifiers": { "mandatory": ["right_command"] }
                                },
                                "to": [{ "key_code": "delete_forward" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "5.1 同时按下 a、s、d 三个按键 打开 Mission Control",
                        "manipulators": [
                            {
                                "from": {
                                    "modifiers": { "optional": ["any"] },
                                    "simultaneous": [
                                        { "key_code": "a" },
                                        { "key_code": "s" },
                                        { "key_code": "d" }
                                    ]
                                },
                                "to": [{ "apple_vendor_keyboard_key_code": "mission_control" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "5.2 字母a => 一个无功能按键(f19),作为系统某些快捷键配置的填充",
                        "enabled": false,
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "a",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "f19" }],
